@model List<ApplicantDTO>
@{
    ViewData["Title"] = "ManageApplicants";
}

<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-header">
                    <h3>Manage Applications</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="job-alerts-item">
                    <h3 class="alerts-title text-center">@ViewBag.jobTitle </h3>
                    @foreach (var applicant in Model)
                    {
                        <div class="applications-content">
                            <div class="row">
                                <div class="col-11 applicantInfo">
                                    <div class="row">
                                        <div class="col-md-4 text-center">
                                            <h3 class="ApplicantName">@applicant.Name</h3>
                                        </div>
                                        <div class="col-lg-2 col-md-4 col-xs-12 text-center noPadding ApplicantDisability">
                                            <span class="btn btn-circle ">
                                                @if (applicant.DisabilityId == 1)
                                                {
                                                    <i class="far fa-eye-slash"></i>
                                                }
                                                else if (applicant.DisabilityId == 2)
                                                {
                                                    <i class="fas fa-deaf"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-ellipsis-h"></i>
                                                }
                                            </span>
                                        </div>
                                        <div class="col-md-3">
                                            <p>Pending..</p>
                                        </div>
                                        <div class="col-md-3">
                                            <a href="~/Chat/index?toUserId=@applicant.Id" class="btn btn-common log-btn contactApplicantBtn">Contact</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-1 EditApplicant">
                                    <span class="btn btn-circle acceptApplicant">
                                        <i class="lni lni-checkmark"></i>
                                    </span>
                                    <br />
                                    <span class="btn btn-circle rejectApplicant">
                                        <i class="lni lni-close"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    }



                    <ul class="pagination justify-content-center mt-4">
                        <li class="active"><a href="#" class="btn-prev"><i class="lni-angle-left"></i>prev</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li class="active"><a href="#" class="btn-next">Next <i class="lni-angle-right"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

